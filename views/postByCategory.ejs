<%- include("./FixedHeader/header") -%>




<div class="container">
    <div class="text-center">
      <h2 class="section-heading text-uppercase">United States</h2>
      <h3 class="section-subheading text-muted">please choose the items for deletion.</h3>
    </div>
    <div class="row">
      <div class="col-lg-4 col-sm-6 mb-4">
        <% posts.forEach(post=> { %>
        <form action="/category" method="post">
          <div class="card" style="width: 18rem;">
            <img src="../<%= post.imagePathForWeb %>" class="card-img-top" alt="<%= post.formatedName %>">
            <div class="card-body">
              <input type="hidden" name="postId" value="<%= post._id %>"> </input>
              <h5 class="card-title"><%= post.name %></h5>
              <p class="card-text"><%= post.info %></p>
              <p class="card-text">size <%= post.width %>x<%= post.height %></p>
              <div class="form-group">
                <label for="downloadSelector">Example select</label>
                <select class="form-control" id="downloadSelector">
                  <option>Fullsize</option>
                  <option>50%</option>
                </select>
              </div>
              <button type="submit" class="btn btn-dark">Download</button>
            </div>
          </div>
      </div>
      </form>
      <% }); %>
  
    </div>
  </div>
  </div>


<%- include("./forHomePage/footer")-%>

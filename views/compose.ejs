<%- include("./FixedHeader/header") -%>

    <div class="container">
<form action="/compose" method="post" enctype="multipart/form-data" class="form-group">
    <div class="input-group">
        <input type="file" id="imgUpload" name="imgUpload" required>
    </div>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" id="info" name="name" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="info">info</label>
        <input type="text" id="info" name="info" class="form-control">
    </div>
    <div class="form-group">
        <label for="category">Category</label>
        <select class="form-control" name='category' id="category">
            <% categories.forEach((category)=>{ %>
            <option><%= category.title %></option>
           <% }) %>
        </select>
      </div>
    <div class="form-group">
        <label for="iso">Tags</label>
        <input type="text" id="tags" name="tags" class="form-control">
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary" style="margin-top: 2%;">Publish</button>
    </div>
</form>
    </div>


